# PostgreSQL-Einstellungen
POSTGRES_DB=signator
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_strong_postgres_password

# MinIO-Einstellungen
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your_strong_minio_password

# Next.js Public Supabase/MinIO Config
# Diese werden im Frontend benötigt, um sich mit den Diensten zu verbinden
NEXT_PUBLIC_SERVER_URL=http://localhost:8000
NEXT_PUBLIC_SUPABASE_URL=http://localhost:5432
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
NEXT_PUBLIC_MINIO_ENDPOINT=localhost
NEXT_PUBLIC_MINIO_PORT=9000
NEXT_PUBLIC_MINIO_BUCKET=images

# Backend Supabase/MinIO Config (könnte auch Service-Keys enthalten)
SUPABASE_URL=http://db:5432 # Interner Docker-Hostname für die Datenbank
SUPABASE_KEY=your_supabase_service_role_key_here
MINIO_ENDPOINT=storage:9000 # Interner Docker-Hostname für MinIO
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your_strong_minio_password
MINIO_BUCKET=images